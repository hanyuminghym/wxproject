.modal{
  width:100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  position: fixed;
  top: 0;
  left:0;
}
.modal-content{
  width: 100%;
  min-height: 200rpx;
  background: #fff;
  position: fixed;
  bottom:0px;
}


.modal-content button{
  font-size:25rpx;
  display:inline-block;
  position: flex;
  width: 46%;
  margin:0rpx 2%;
  margin-bottom:10rpx;
  background: #fff;
  border: 1px solid #efefef;
  box-shadow: none;
}

.modal-content button_click{
  border: 1px solid #0082c8;
}

.modal-top{ 
  background: #ffffff;
  font-size: 25rpx;
  height: 94rpx;
  line-height: 94rpx;
  padding-left: 30rpx;
}

.modal-body{
  padding: 0 4%;
}
.modal-footer{
  font-size: 34rpx;
  padding: 20rpx;
  background: #0f8ded;
  text-align: center;
  color: #fff;
  position: relative; 
  bottom: 0;
  width: 100%;
  height: 100rpx;
  /* display: flex;
  justify-content: flex-end; */
}
